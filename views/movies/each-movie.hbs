<h4>recommendations</h4>
<ul>
{{#each recommendations.results}}
    <li>{{this.original_title}}</li>
{{/each}}
</ul>



<h2>Add a Review</h2>
<form action='/movies/movie-detail/{{id}}' method='POST'>

  <textarea type='text' name='comment'></textarea>

  <button type="submit">Send review</button>

</form>

{{#if reviews}}
  <h3>List of reviews:</h3>

  {{#each reviews}}
    <h4>Author: {{this.user.username}}</h4>
    
    <p>Comment: </p>
    <p>{{this.comment}}</p>


    <form action='/movies/movie-detail/{{this.movie}}/delete/{{this._id}}' method="POST">
      <button type="submit">Delete</button>
    </form>

    <form action='/movies/movie-detail/{{this.movie}}/edit/{{this._id}}' method="POST">
      <button type="submit">Edit</button>
    </form>
  {{/each}}
{{/if}}







